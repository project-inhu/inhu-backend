{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/user-server/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "dtoFileNameSuffix": [
            ".dto.ts",
            ".entity.ts",
            ".type.ts"
          ]
        }
      }
    ],
    "webpack": true,
    "tsConfigPath": "apps/user-server/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/user-server",
  "projects": {
    "admin-server": {
      "type": "application",
      "root": "apps/admin-server",
      "entryFile": "main",
      "sourceRoot": "apps/admin-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/admin-server/tsconfig.app.json"
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "user-server": {
      "type": "application",
      "root": "apps/user-server",
      "entryFile": "main",
      "sourceRoot": "apps/user-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-server/tsconfig.app.json"
      }
    }
  }
}